<div class ="col-lg-l2" >

  <div class ="card rounded-0 mt5 mb-5">

    <div class="card-body">
      <h2 class = "text-center">Register</h2>
    </div>
  </div>

<%= form_with model: @register , url: sign_up_path do |form| %>
  
  <% if @register.errors.any? %>
    <div class = "alert alert-danger">
      <% @register.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <%end%>
    </div>
  <% end %>


  <div class = "form-group">
    <%= form.label :name , class: 'mb-2'%>
    <%= form.text_field :name , class: "form-control form-control-lg" %>
  </div>
   
  <div class = "form-group">
    <%= form.label :email , class: 'mb-2'%>
    <%= form.email_field :email , class: "form-control form-control-lg" %>
  </div>

  <div class = "form-group">
    <%= form.label :contact , class: 'mb-2'%>
    <%= form.number_field :contact , class: "form-control form-control-lg" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :password , class: 'mb-2'%>
    <%= form.password_field :password , class: "form-control form-control-lg" %>
  </div>

  <div class = "form-group">
    <%= form.label :password_confirmation , class: 'mb-2'%>
    <%= form.password_field :password_confirmation , class: "form-control form-control-lg" %>
  </div>



  <div class ="row">
      <div class = "col-lg-12 mt-4" >
        <%= form.submit "Sign Up" ,class: 'btn btn-info btn-lg'%>
      </div>
  </div>

<% end %>
</div>